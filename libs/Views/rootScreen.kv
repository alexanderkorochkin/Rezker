<HoverMDFlatButton>:
    hover_bg: 1, 1, 1, 0
    new_bg_color: 1, 1, 1, 0.02
    hr: 8
    ripple_alpha: 0.2
    radius: [self.hr, self.hr]
    canvas.before:
        Color:
            rgba: self.new_bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.hr, self.hr, self.hr, self.hr]
    canvas.after:
        Color:
            rgba: self.hover_bg
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.hr, self.hr, self.hr, self.hr]
    on_enter:
