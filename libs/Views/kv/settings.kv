#:import Window kivy.core.window.Window
#:import Factory kivy.factory.Factory


<SBool>:
    adaptive_height: True
    HoverMDCardNoScaleButton:
        on_release: root.tap()
        size_hint_y: None
        height: dp(60)
        MDAnchorLayout:
            anchor_y: 'center'
            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True
                padding: [dp(10), 0, dp(10), 0]
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    adaptive_height: True
                    MDLabel:
                        font_style: 'Body1'
                        text: root.title
                        size_hint: None, None
                        width: self.texture_size[0]
                        height: self.texture_size[1]
                        text_size: None, None
                    MDLabel:
                        font_style: 'Caption'
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.accent_color
                        text: root.sub_title
                        size_hint: None, None
                        width: self.texture_size[0]
                        height: self.texture_size[1]
                        text_size: None, None
                MDBoxLayout:
                    MDAnchorLayout:
                        anchor_y: 'center'
                        anchor_x: 'right'
                        MDFlatButton:
                            ripple_alpha: 0.
                            font_style: 'H6'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color if root.value else app.theme_cls.accent_color
                            text: str(root.value)
                            on_release: root.tap()


